{
    "env": {
        "shared-node-browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-import"
    ],
    "rules": {
        "quotes": [
            "warn",
            "double"
        ],
        "import/extensions": ["warn", {
            "ts": "never",
            "json": "always"
          }]
    }
}